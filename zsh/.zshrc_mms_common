if [ -f ~/.secrets ]; then
  if [[ $(uname) == "Darwin" ]]; then
    export $(grep -v '^#' ~/.secrets | xargs -0)
  else
    export $(grep -v '^#' ~/.secrets | xargs -d '\n')
  fi
fi
